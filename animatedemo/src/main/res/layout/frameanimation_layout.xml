<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimaryDark">
    <ImageView android:id="@+id/frameanimation_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button android:id="@+id/frameanimation_start_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/frameanimation_start" />
    <Button android:id="@+id/frameanimation_stop_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/frameanimation_stop" />


</LinearLayout>